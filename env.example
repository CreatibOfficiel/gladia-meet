# Configuration Google Meet Bot
# Copiez ce fichier vers .env et remplissez vos valeurs

# Mode API (true/false)
API_MODE=true

# Google Meet Configuration
GMEET_LINK=https://meet.google.com/your-meet-id
GMAIL_USER_EMAIL=your-email@gmail.com
GMAIL_USER_PASSWORD=your-password-or-app-password

# Recording Configuration
DURATION_IN_MINUTES=15
MAX_WAITING_TIME_IN_MINUTES=5

# Gladia API Configuration
GLADIA_API_KEY=your-gladia-api-key
DIARIZATION=false

# Custom Configuration
CUSTOM_NAME=Recording Bot 